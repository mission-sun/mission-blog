{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "jsxFactory": "VueTsxSupport",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "types": [
      "webpack-env"
    ],
    "paths": {
      "@src/*": ["src/*"],
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@common/*": ["src/common/*"],
      "@static/*": ["src/static/*"],
      "@views/*": ["src/views/*"],
      "@api/*": ["src/api/*"],
      "@router/*": ["src/router/*"],
      "@mixin/*": ["src/mixin/*"]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx", "src/components/hello-class.jsx",
    "node_modules/vue-tsx-support/enable-check.d.ts", "src/routes/index.js", "src/iconfont/iconfont.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
